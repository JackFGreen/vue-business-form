{
  "name": "vue-business-form",
  "version": "0.1.0",
  "private": false,
  "main": "src/index.js",
  "files": [
    "src",
    "forms",
    "plugins"
  ],
  "scripts": {
    "prettier": "prettier --config ./.prettierrc --write 'src/**/*.{js,vue,scss,json}'",
    "lint": "standard --plugin html 'src/**/*.{js,vue}' --verbose | snazzy",
    "fix": "standard --plugin html 'src/**/*.{js,vue}' --fix --verbose | snazzy",
    "format": "yarn prettier && yarn fix && yarn lint",
    "commit": "npx git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "peerDependencies": {
    "vue": "^2.5.21"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.4.0",
    "@commitlint/config-angular": "^7.3.1",
    "babel-eslint": "^10.0.1",
    "conventional-changelog-cli": "^2.0.11",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "prettier": "^1.16.1",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1"
  },
  "standard": {
    "plugins": [
      "html"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "ignore": [
      "node_modules/**",
      "dist/**",
      "static/**",
      "test/**"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "license": "MIT",
  "description": "A Vue form plugin",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JackFGreen/vue-business-form.git"
  },
  "keywords": [
    "vue",
    "form"
  ],
  "author": "JackFGreen",
  "bugs": {
    "url": "https://github.com/JackFGreen/vue-business-form/issues"
  },
  "homepage": "https://github.com/JackFGreen/vue-business-form#readme"
}
